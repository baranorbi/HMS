<UserControl
    x:Class="HMS.DesktopClient.Controls.PatientDashboardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HMS.DesktopClient.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="NotificationsButton" Click="NotificationsButton_Click" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7E7;" Margin="0,0,5,0"/>
                    <TextBlock Text="Notifications"/>
                </StackPanel>
            </Button>
            <Button x:Name="LogoutButton" Click="LogoutButton_Click">
                <StackPanel Orientation="Horizontal">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7E8;" Margin="0,0,5,0"/>
                    <TextBlock Text="Logout"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Patient Information -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0" Spacing="10">
                <TextBlock Text="Patient Information" Style="{ThemeResource SubtitleTextBlockStyle}" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Name: " FontWeight="SemiBold" Width="150"/>
                    <TextBox x:Name="NameTextBox" Text="{Binding Name, Mode=TwoWay}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Email: " FontWeight="SemiBold" Width="150"/>
                    <TextBlock Text="{Binding Email}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="CNP: " FontWeight="SemiBold" Width="150"/>
                    <TextBlock Text="{Binding CNP}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Phone Number: " FontWeight="SemiBold" Width="150"/>
                    <TextBlock Text="{Binding PhoneNumber}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Blood Type: " FontWeight="SemiBold" Width="150"/>
                    <TextBlock Text="{Binding BloodType}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Birth Date: " FontWeight="SemiBold" Width="150"/>
                    <TextBlock Text="{Binding BirthDateFormatted}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Address: " FontWeight="SemiBold" Width="150"/>
                    <TextBlock Text="{Binding Address}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Emergency Contact: " FontWeight="SemiBold" Width="150"/>
                    <TextBox x:Name="EmergencyContactTextBox" Text="{Binding EmergencyContact, Mode=TwoWay}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Allergies: " FontWeight="SemiBold" Width="150"/>
                    <TextBlock Text="{Binding Allergies}" Width="250"/>
                </StackPanel>
            </StackPanel>

            <!-- Health Information and Password -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0" Spacing="10">
                <TextBlock Text="Health Information" Style="{ThemeResource SubtitleTextBlockStyle}" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Weight (kg): " FontWeight="SemiBold" Width="150"/>
                    <NumberBox x:Name="WeightNumberBox" Value="{Binding Weight, Mode=TwoWay}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Height (cm): " FontWeight="SemiBold" Width="150"/>
                    <NumberBox x:Name="HeightNumberBox" Value="{Binding Height, Mode=TwoWay}" Width="250"/>
                </StackPanel>

                <TextBlock Text="Change Password" Style="{ThemeResource SubtitleTextBlockStyle}" Margin="0,20,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="New Password: " FontWeight="SemiBold" Width="150"/>
                    <PasswordBox x:Name="PasswordBox" Password="{Binding Password, Mode=TwoWay}" Width="250"/>
                </StackPanel>

                <Button x:Name="UpdateButton" Content="Update Information" Click="OnUpdateButtonClick" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>